                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:layout_marginBottom="@dimen/espaco_entre_componentes_primarios"
                android:layout_marginTop="@dimen/espaco_entre_componentes_primarios"
                android:background="@color/colorPrimaryDark"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boasVindasForm" />

            <TextView
                android:id="@+id/textoInternado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/formulario1_pergunta1"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroupInternado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioInternadoSim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/radioInternadoNao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no" />

            </RadioGroup>


            <TextView
                android:id="@+id/textoDiabete"
