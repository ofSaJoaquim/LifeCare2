            <LinearLayout
                android:id="@+id/boasVindasForm"
                android:layout_width="match_parent"
                android:layout_height="68dp"



                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutprincipal">

                <TextView
                    android:id="@+id/boasVindasText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/formulario1_banner1"
                    android:textColor="@color/corTitulo1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/boasVindasText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/formulario1_banner2"
                    android:textColor="@color/corTitulo2"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
